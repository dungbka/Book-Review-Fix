<body class="product-template-default single single-product postid-145 woocommerce woocommerce-page">
  <div class="is-nav-offset"></div>
  <div class="MAIN-CONTENT">
    <div class="container mt-100">
      <div class="row">
        <div class="col-sm-12">
          <div id="product-145" class="post-145 product type-product status-publish has-post-thumbnail product_cat-adventure first instock taxable shipping-taxable purchasable product-type-simple">
            <!-- importtiam -->
            <div class="SingleProductHeader mb-100">
              <div class="woocommerce-product-gallery woocommerce-product-gallery--with-images woocommerce-product-gallery--columns-4 images" data-columns="4" style="opacity: 0; transition: opacity .25s ease-in-out;">
                <div class="woocommerce-product-gallery__image-wrapper SingleProductImage">
                  <div data-thumb="http://subsolardesigns.com/odrin/demo1/wp-content/uploads/sites/8/2017/08/cover_pisces-80x120.png" class="woocommerce-product-gallery__image PageFlipBook">
                    <a href="#" class="is-page-flip single-has-edge has-edge has-edge-thick" data-post-id="145">
                      <img width="468" height="700" src="<%= @book.book_img.url %>" class="attachment-shop_single size-shop_single wp-post-image" alt=""/>
                    </a>
                  </div>
                </div>
              </div>
              <div class="single-product-summary">
                <div class="SpecialHeading mb-60"><h1 class="product_title special-title entry-title"><%= @book.title.truncate(20) %></h1></div>
                <div class="woocommerce-product-details__short-description mb-60">
                  <p style="font-size: 15px; font-family: Muli; display: block; line-height: 1.82em"><%= @book.description.truncate(800) %></p>
                </div>
              </div><!-- .summary -->
            </div>
          </div><!-- #product-145 -->
        </div><!-- end col-sm-12 -->
      </div><!-- end row -->
    </div><!-- end container -->
  </div><!-- end MAIN-CONTENT -->

  <div class="rate-container">
    <div id="rate-show-hotel">
      <div id="rate-avg-hotel">
        <p style="text-align: center; font-size: 15pt;"><%= t "Rate Average" %> :</p>
        <p id="rate-sum"><%= @average_review.round(1) %>/5 </p>
        <p id="rate-count"><i class="fa fa-user"></i> <%= t "Total Rate" %> : <%= @book.total_rate %></p>
      </div>
      <div id="rate-detail-hotel">
        <span> 5 </span>
        <i class="fa fa-star" aria-hidden="true"></i>
        <% if (@book.rate_five_per).to_i==0 %>
        <div class="bar bar-5">
          <p>0%</p>
        </div>
        <% else %>
        <div class="bar bar-5" style="width: <%= @book.rate_five_per %>%;">
          <p><%= (@book.rate_five_per*1.25).to_i %>%</p>
        </div>
        <% end %>
        <div class="clearfix"></div>

        <span> 4 </span>
        <i class="fa fa-star" aria-hidden="true"></i>
        <% if @book.rate_four_per.to_i==0 %>
        <div class="bar bar-4">
          <p>0%</p>
        </div>
        <% else %>
        <div class="bar bar-4" style="width: <%= @book.rate_four_per %>%;">
          <p><%= (@book.rate_four_per*1.25).to_i %>%</p>
        </div>
        <% end %>
        <div class="clearfix"></div>

        <span> 3 </span>
        <i class="fa fa-star" aria-hidden="true"></i>
        <% if @book.rate_three_per.to_i==0 %>
        <div class="bar bar-3">
          <p>0%</p>
        </div>
        <% else %>
        <div class="bar bar-3" style="width: <%= @book.rate_three_per %>%;">
          <p><%= (@book.rate_three_per*1.25).to_i %>%</p>
        </div>
        <% end %>
        <div class="clearfix"></div>

        <span> 2 </span>
        <i class="fa fa-star" aria-hidden="true"></i>
        <% if @book.rate_two_per.to_i==0 %>
        <div class="bar bar-2">
          <p>0%</p>
        </div>
        <% else %>
        <div class="bar bar-2" style="width: <%= @book.rate_two_per %>%;">
          <p><%= (@book.rate_two_per*1.25).to_i %>%</p>
        </div>
        <% end %>
        <div class="clearfix"></div>

        <span> 1 </span>
        <i class="fa fa-star" aria-hidden="true"></i>
        <% if @book.rate_one_per.to_i==0 %>
        <div class="bar bar-1">
          <p>0%</p>
        </div>
        <% else %>
        <div class="bar bar-1" style="width: <%= @book.rate_one_per %>%;">
          <p><%= (@book.rate_one_per*1.25).to_i %>%</p>
        </div>
        <% end %>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>

  <div class="review-comment">
    <% if user_signed_in? %>
      <% if @flag.empty? %>
        <div class="add-review">
          <div id="bt-add-review">
            <button class="button-review"><%= t "Add Your Review" %></button>
          </div>
          <div class="content-add-review", style="display: none">
            <%= simple_form_for([@book, @book.reviews.build]) do |f| %>
            <div id="rating-form">
              <label><%= t "Rating" %></label>
            </div>
            <%= f.text_area :comment, class: 'form-control' ,:required => true %>
            <%= f.button :submit, 'Send', class: "button-comment", style: "margin-top: 10px" %>
            <% end %>
          </div>
        </div>
      <% else %>
        <div>
          <% @my_review = Review.find_by(user_id: current_user.id, book_id: @book.id) %>
          <p style="font-size: 20px; color: red"><%= t "You have reviewed this" %></p>
          <button class="button-review bt-update-review"><span class="glyphicon glyphicon-pencil"></span> Edit Review</button>
          <button class="button-review" style="background-color: #d9534f !important;"><%= link_to '<span class="glyphicon glyphicon-trash"></span> Delete Review'.html_safe, book_review_path(@my_review.book, @my_review), method: :delete, data: {confirm: "Are you sure?"}, :id => "button-edit"%></button>
        </div>
         <div class="update-review" style="display: none">
            <%= simple_form_for([@book, @my_review]) do |f| %>
              <div id="rating-form">
                <label><%= t "Rating" %></label>
              </div>
              <%= f.input :comment %>
              <%= f.button :submit, "Update", :class => "button-comment" %>
            <% end %>
          </div>
      <% end %>
    <% else %>
    <p style="font-size: 20px; color: red"><%= t "You must login to review" %></p>
    <% end %>

    <div class="show-review">
      <p style="font-size: 20px; margin-top: 30px;"><%= t "Reviews" %></p>
      <%= render @reviews %>
      <%= will_paginate @reviews %>
    </div>

  </div>

  <script>
    $(document).ready(function(){
      $("#bt-add-review").click(function(){
        $(".content-add-review").toggle();
      });
    });
  </script>

  <script>
    $('.bt-update-review').click(function(){
      $('.update-review').toggle();
    })
  </script>

  <script type='text/javascript'>
    (function(){
        if( window.localStorage ){
            if( !localStorage.getItem('firstLoad') ){
                localStorage['firstLoad'] = true;
                window.location.reload();
            }
            else
                localStorage.removeItem('firstLoad');
        }
    })();

  </script>

