<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <h1><%= t "Users" %></h1>
    <table>
      <thead class="userlist-header">
        <tr>
          <th><%= t "Email" %></th>
          <th><%= t "Name" %></th>
          <th colspan="3" class="function"><%= t "Function" %></th>
        </tr>
      </thead>

      <tbody class="userlist">
        <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= link_to t("Show"), user %></td>
          <td>
            <% unless user.admin %>
            <%= link_to t("Destroy"), user, method: :delete, data: {confirm: 'Are you sure?'} %>
            <% end %>
          </td>
          <td><%= render 'form', user: user %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
<!--     <div class="form-size alert alert-info" role=alert>
      <%= debug(params) if Rails.env.development? %>
    </div> -->
    <br>
  </div>
  <div class="col-md-1"></div>
</div>

